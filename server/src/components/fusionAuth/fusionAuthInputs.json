{
    "register": {
        "username": {
            "required": true,
            "minLength": {
                "rule": 5
            },
            "max": {
                "rule": 30
            }
        },
        "firstName": {
            "required": true,
            "minLength": {
                "rule": 3
            },
            "max": {
                "rule": 50
            }
        },
        "lastName": {
            "required": true,
            "minLength": {
                "rule": 3
            },
            "max": {
                "rule": 100
