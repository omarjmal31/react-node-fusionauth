<div class="w-section sectionttabs">
    <div class="w-container tabs-container">
        <div data-duration-in="300" data-duration-out="100" class="w-tabs">
            <div class="w-tab-menu w-clearfix tabs-menu">
                <a data-w-tab="active" class="w-tab-link w--current w-inline-block tabs">
                    <div>Active Tasks</div>
                </a>
              {{#link-to "completed" data-w-tab="completed" class="w-tab-link w-inline-block tabs"}}
                  <div>completed tasks</div>
              {{/link-to}}
            </div>
            <div class="w-tab-content tabs-content-shadow">
                <div data-w-tab="active" class="w-tab-pane w--tab-active active-tab-scroll">
                    <div class="active-tasks-child-div">
                      {{!-- Create a new ToDo --}}
                      {{new-to-do create="create"}}

                      {{!-- List all non-completed (active) ToDos --}}
                      {{#each model as |todo|}}
                        {{#unless todo.completed}}
                          {{to-do todo=todo complete="complete" delete="delete" reload="reload" update="update"}}
                        {{/unless}}
                      {{/each}}
                    </div>
                </div>
                <div data-w-tab="completed" class="w-tab-pane active-tab-scroll"></div>
            </div>
        </div>
    </div>
</div>