{{#if hover}}
  {{#if todo.completed}}
    <i title="Un-Complete" class="fa fa-square-o fa-2x action" {{action "complete" todo}}></i>
  {{else}}
    <i title="Complete" class="fa fa-check-square-o fa-2x action" {{action "complete" todo}}></i>
  {{/if}}
{{else}}
  {{#if todo.completed}}
    <i title="Un-Complete" class="fa fa-check-square-o fa-2x action" {{action "complete" todo}}></i>
  {{else}}
    <i title="Complete" class="fa fa-square-o fa-2x action" {{action "complete" todo}}></i>
  {{/if}}
{{/if}}
